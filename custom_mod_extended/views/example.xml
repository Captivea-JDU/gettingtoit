<odoo>
<data>

<record id="example_form" model="ir.ui.view">
<field name="model">sale.order</field>
<field name="arch" type="xml">
<form string="Sale Order">
<h1>Are you ready to lose some money?</h1>
<!-- Button trigger modal -->
<button name="urmomm" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch Sports Betting
</button>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button name="urdad" type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <a href="https://www.draftkings.com">Draft Kings</a><br></br>
        <a href="https://www.outlastdfs.com">Outlast</a><br></br>
        <a href="https://www.fanduel.com">fanduel</a><br></br>
        <a href="https://codes.jockmkt.com">Jock</a><br></br>
      </div>
      <div class="modal-footer">
        <button name="urbro" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button name="ursis" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>
</field>
</record>

<record id="sale_example_action" model="ir.actions.act_window">
<field name="name">urmom</field>
<field name="type">ir.actions.act_window</field>
<field name="target">inline</field>
<field name="res_model">sale.order</field>
<field name="view_mode">form</field>
</record>

<menuitem id="sale_example"
    name="Sports Betting"
    parent="sale.sale_menu_root"
    action="sale_example_action"/>

</data>
</odoo>